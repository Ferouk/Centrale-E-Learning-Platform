{% extends 'base.html.twig' %}
{% block title %}{{chapter.course.name}}{% endblock %}
{% block body %}
    {% include 'navs/user.html.twig' %}
    <section class="container">
      {% include 'navs/sidebar.student.html.twig' %}
      <div class="col-md-9">
        <h2><i class="fa fa-book" aria-hidden="true"></i>  Ajout leçon au chapitre {{chapter.title}}</h2><small class="text-muted"> {{chapter.course.name}} de {{chapter.course.gmue.classe.slug}} par {{chapter.course.teacher.user.name}} {{chapter.course.teacher.user.surname}}</small>
        <hr>
		<form action="{{path('Teacher_lesson', {'id': chapter.id})}}" method="post" class="form" enctype="multipart/form-data">
			<fieldset class="form-group">
				<label for="title">Titre</label>
				<input type="text" class="form-control" name="title" id="title" placeholder="Titre de la leçon">
			</fieldset>
			<fieldset class="form-group">
				<label for="slug">Slug</label>
				<input type="text" class="form-control" name="slug" id="slug" placeholder="Nom court (Optionel)">
			</fieldset>
			<fieldset class="form-group">
				<label for="type">Type</label>
				<select name="type" id="type" class="c-select">
					<option value="cours">Cours</option>
					<option value="tp">TP</option>
					<option value="td">TD</option>
				</select>
			</fieldset>
			<fieldset class="form-group">
				<label for="description">Description</label>
				<textarea class="form-control" name="description" id="description" placeholder="Description"></textarea>
			</fieldset>
			<fieldset class="form-group">
				<label for="content">Contenu</label>
				<textarea class="form-control" name="content" id="content" placeholder="Contenu"></textarea>
			</fieldset>
			<fieldset class="form-group">
				<label for="attachment">Attachements</label>
			    <small class="text-muted">Fichier (Word, PDF, compressé et/ou video)</small>
			    <br>
				<label class="file">
					  <input type="file" name="attachment" id="attachment" accept="video/mp4,video/x-m4v,video/*,application/pdf,application/msword,application/x-rar-compressed,application/zip, application/octet-stream">
					  <span class="file-custom"></span>
				</label>
			</fieldset>
			<fieldset class="form-group">
				<a href="{{path('Teacher_course', {'id' : chapter.course.id})}}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Revenir</a>

				<button class="btn btn-success pull-right"><i class="fa fa-plus"></i> Ajouter la leçon</button>
			</fieldset>
		</form>
      </div>
    </section><!-- /container -->



    
{% endblock %}
